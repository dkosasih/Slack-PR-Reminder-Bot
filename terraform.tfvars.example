# AWS Region (default: us-east-1)
aws_region = "us-east-1"

# AWS Profile from ~/.aws/credentials
aws_profile = "personal"

# Project name - used as prefix for all resources
project_name = "pr-reminder-slack-bot"

# Slack Bot Token - Get from https://api.slack.com/apps
slack_bot_token = "xoxb-your-slack-bot-token-here"

# Slack Signing Secret - Get from https://api.slack.com/apps
slack_signing_secret = "your-slack-signing-secret-here"

# Slack Channel ID (e.g., C04BM708T9N)
channel_id = "C04BM708T9N"

# Custom reminder text (optional)
# reminder_text = "Custom reminder message here"

# Window size (optional, default: 2)
# window_size = 2
